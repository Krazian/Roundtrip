<!-- If error(s) exist, message is flashed -->
  	<% if @user.errors.any?  %>
  <div class = "pure-menu pure-menu-horizontal">
    <ul class="pure-menu-list">
    	 <li class="pure-menu-item pure-menu-has-children pure-menu-allow-hover">
    	 	<p style="color: red"><%= pluralize(@user.errors.count, "ERROR")%> (HOVER TO VIEW)</p>
    	 	<ul class="pure-menu-children">
    	 		<% @user.errors.full_messages.each do |message| %>
   				<li class="pure-menu-item" style="color: red"> > <%= message %></li>
   				<% end %>
   			</ul>
   		</li>
   	</ul>
   </div>
   	<% end %>
<!-- Form to create new user -->
<form class = "pure-form pure-form-aligned pure-u-1-3">
  <fieldset class="field">
  <legend><h1 class="banner">Create New User</h1></legend>
		<div class="pure-control-group">
			<%= f.label :username, class: "pure-u-1-4 form-word" %>
			<%= f.text_field :username, class: "pure-u-1-4" %>
    </div></br>	
    <div class="pure-control-group">
			<%= f.label :email, class: "pure-u-1-4 form-word"%>
			<%= f.email_field :email, class: "pure-u-1-4" %>
    </div></br>
    <div class="pure-control-group">
			<%= f.label :first_name, class: "pure-u-1-4 form-word"%>
			<%= f.text_field :first_name, class: "pure-u-1-4" %>
    </div></br>
    <div class="pure-control-group">
			<%= f.label :last_name, class: "pure-u-1-4 form-word"%>
			<%= f.text_field :last_name, class: "pure-u-1-4" %>
    </div></br>
    <div class="pure-control-group">
			<%= f.label :password, class: "pure-u-1-4 form-word"%>
			<%= f.password_field :password, class: "pure-u-1-4" %>
    </div></br>
    <div class="pure-control-group">
			<%= f.label :password_confirmation, class: "pure-u-1-4 form-word"%>
			<%= f.password_field :password_confirmation, class: "pure-u-1-4" %>
    </div></br>
		<div class="pure-controls">
			<input type="submit" class="pure-button pure-button-primary">
		</div>
	</fieldset>
</form>
