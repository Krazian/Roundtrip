<!DOCTYPE html>
<html>
    <head>
        <title>Trippy</title>
        <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
        <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
        <%= csrf_meta_tags %>

    </head>
    <body>
        <div class="container" >
            
        <div class = "pure-g">
                <% if session[:user_id] %>
                   <%= render partial: 'layouts/log_navbar' %>
                <% else %>
                    <!-- Show this if not logged in -->
                    <%= link_to 'Create User', new_user_path %>
                    <%= link_to 'Log In', new_sessions_path %>
                <% end %>
            </div>
            <%= yield %>
        </div>
        </div>
    </div>
    </body>
</html>
