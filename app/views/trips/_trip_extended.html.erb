<div class="pure-u-1" >
<img src="<%= map_image %>">


<h2 class="banner">You'll be seeing:</h2>
<div class="pure-u-1-3" style="background-color:rgba(0,0,0,0.5)">
<ul>
    <% stops.each do |stop| %>
        <%= render partial: "stop", locals: {stop: stop} %>
    <% end %>
</ul>
</div>
