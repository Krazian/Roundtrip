	<div class="pure-menu pure-menu-scrollable custom-restricted" style="background-color:rgba(0,0,0,0.5)", "margin-left:30%">
    <a class="pure-menu-link pure-menu-heading" style="color:white">Directions</a>
    <ol class="pure-menu-list">
    <% counter = 1 %>
    <% directions.each do |step| %>
			 <li class="pure-menu-item" style="color:white"><%=counter%>. <%= raw(step) %></li></br>
       <% counter +=1 %>
    <% end %>
  </ol>
</div>
